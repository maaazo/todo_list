<div class="container mt-5">
  <%= link_to 'Back', todos_path, class: "btn btn-outline-primary mb-3" %>

  <div class="card">
    <div class="card-body">
      <h1 class="card-title mb-4">Task</h1>

      <div class="mb-3">
        <strong>Name:</strong>
        <%= @todo.name %>
      </div>

      <div class="mb-3">
        <strong>Description:</strong>
        <%= @todo.description %>
      </div>
    </div>
  </div>
</div>
